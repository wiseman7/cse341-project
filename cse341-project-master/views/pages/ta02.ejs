<!DOCTYPE html>
<html>
  <head>
    <% include ../includes/header.ejs %>
  </head>

  <body>
    <% include ../includes/nav.ejs %>
    <div class="jumbotron text-center">
      <div class="container">
        <h1><%= title %></h1>
        <p>This is the placeholder for Team Activity 02</p>
        <!-- First form -->
        <div>
          <form method="POST" action="/ta02/addUser">
            <label for="newPerson">New User</label><br />
            <input type="text" name="newPerson" />
            <button type="submit">Add User</button>
          </form>
        </div>
        <!-- Second Form for removing -->
        <div>
          <form method="POST" action="/ta02/removeUser">
            <label for="remPerson">Username to remove</label><br />
            <button type="submit">Remove User</button>
          </form>
        </div>
        <!-- Loop list -->
        <div>
          <h2>Users:</h2>
          <% for(name of users) { %>
          <p><%= name %></p>
          <% } %>
        </div>
      </div>
    </div>
    <div class="container"></div>
  </body>
</html>
